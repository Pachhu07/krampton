<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.RigFormActivity">

    <TextView
        android:id="@+id/regTextView"
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="98dp"
        android:layout_marginLeft="98dp"
        android:layout_marginTop="36dp"
        android:text="Registration Form"
        android:background="@color/tet"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="18dp" />

    <RelativeLayout
        android:id="@+id/regRlativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/regTextView">

        <TextView
            android:id="@+id/pro_textView"
            android:layout_width="113dp"
            android:layout_height="34dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="51dp"
            android:text="Select as a :"
            android:textSize="18dp" />

    <Spinner
        android:id="@+id/regSpinner"
        android:layout_width="243dp"
        android:layout_height="34dp"
        android:layout_alignTop="@+id/pro_textView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="136dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="136dp" />


    </RelativeLayout>





</RelativeLayout>